{
  "permissions": {
    "allow": [
      "Bash(xargs cat:*)",
      "Bash(find:*)",
      "Bash(git show:*)",
      "Bash(tree:*)",
      "Bash(powershell -Command:*)",
      "Bash(where:*)",
      "Bash(uv pip install:*)",
      "Bash(tasklist:*)",
      "Read(//c/Users/moons/dev/crypto-lab/**)",
      "Bash(xargs:*)",
      "Bash(uv run streamlit:*)",
      "Bash(python -m pytest:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"if ($env:CLAUDE_FILE_PATH -match '\\.env$') { exit 1 } else { exit 0 }\"",
            "description": "Block .env file edits to protect API keys"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"if ($env:CLAUDE_FILE_PATH -match '\\.py$') { ruff format --quiet $env:CLAUDE_FILE_PATH; ruff check --fix --quiet $env:CLAUDE_FILE_PATH }\"",
            "description": "Auto-format and lint Python files on edit"
          }
        ]
      }
    ]
  }
}
